---
import Layout from "../../../layout/Layout.astro";
import Header from "../../../components/Header.astro";
import { FormSignUp } from "../../../components/FormSignUp";
---

<Layout title="Register">
  <Header />

  <main
    class="flex flex-col max-w-xl mx-auto justify-center h-[calc(100vh-80px)]"
  >
    <h1 class="text-4xl font-bold">
      Join Shorty, <span class="text-[#F87700]">Save Time</span>
    </h1>
    <span class="mt-2">Dont't think about it, do it!</span>

    <FormSignUp client:load />
  </main>
</Layout>
